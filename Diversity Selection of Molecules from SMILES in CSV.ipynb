# Diversity Selection of Molecules from SMILES in CSV
# ---------------------------------------------------
# Requirements: RDKit, pandas, scikit-learn, matplotlib
!pip install rdkit
import pandas as pd
from rdkit import Chem
from rdkit.Chem import AllChem, Draw
from rdkit.ML.Cluster import Butina
import numpy as np

# 1. Load SMILES from CSV
# Assumes CSV has a column named "SMILES"
df = pd.read_csv("molecules.csv")
smiles_list = df["SMILES"].dropna().tolist()

# 2. Convert SMILES to RDKit molecules
mols = [Chem.MolFromSmiles(smi) for smi in smiles_list if Chem.MolFromSmiles(smi)]

# 3. Generate fingerprints (Morgan/ECFP4)
fps = [AllChem.GetMorganFingerprintAsBitVect(m, radius=2, nBits=2048) for m in mols]

# 4. Convert fingerprints to numpy arrays for clustering
def fp_to_array(fp):
    arr = np.zeros((1,), dtype=int)
    Chem.DataStructs.ConvertToNumpyArray(fp, arr)
    return arr

fps_array = [fp_to_array(fp) for fp in fps]

# 5. Compute distance matrix (Tanimoto)
from rdkit import DataStructs

def tanimoto_dist(fp1, fp2):
    return 1.0 - DataStructs.TanimotoSimilarity(fp1, fp2)

# Build distance list for Butina clustering
dists = []
nfps = len(fps)
for i in range(1, nfps):
    sims = DataStructs.BulkTanimotoSimilarity(fps[i], fps[:i])
    dists.extend([1.0 - x for x in sims])

# 6. Cluster molecules with Butina
# threshold ~0.7 means molecules in same cluster have similarity >= 0.7
clusters = Butina.ClusterData(dists, nfps, 0.7, isDistData=True)

# 7. Select one representative per cluster (first molecule)
diverse_mols = [mols[cluster[0]] for cluster in clusters]

# 8. Visualize diversity set
img = Draw.MolsToGridImage(diverse_mols, molsPerRow=5, subImgSize=(200,200))
from IPython.display import display 
display(img)

# 9. Save diversity set to new CSV
diverse_smiles = [Chem.MolToSmiles(m) for m in diverse_mols]
pd.DataFrame({"Representative_SMILES": diverse_smiles}).to_csv("diverse_set.csv", index=False)

print(f"Selected {len(diverse_smiles)} diverse molecules out of {len(mols)} total.")


